# Database Configuration (uses root PostgreSQL service)
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=liwaisi-sis-admin
DB_PASSWORD=${POSTGRES_PASSWORD:-postgres}
DB_NAME=smart-irrigation-system-db
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m
DB_CONN_MAX_IDLE_TIME=1m

# Alternative: Use PgBouncer connection pooler (recommended for production)
# DB_HOST=localhost
# DB_PORT=6432

# Test Database Configuration (uses same root PostgreSQL service)
DB_TEST_HOST=localhost
DB_TEST_PORT=5432
DB_TEST_USER=liwaisi-sis-admin
DB_TEST_PASSWORD=${POSTGRES_PASSWORD:-postgres}
